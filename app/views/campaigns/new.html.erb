<div>
<% if @campaign.errors.any? %>
  <ul>
    <% @campaign.errors.full_messages.each do |fm| %>
      <li><%= fm %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for [@user, @campaign], url: url_for(controller: 'campaigns', action: 'create') do |f| %>
  <%= f.hidden_field :user_id, value:"#{params[:user_id]}" %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
</div>
