
<div class="search">
  <%= form_tag '/spells/search', method:'get' do %>
    <%= text_field_tag 'search' %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<h1>Spells:</h1>

<div class="scrollable">
<ul>
<% @spells.each do |spell| %>
<li><%= link_to spell.name, spell_path(spell) %></li>
<% end %>
</ul>
</div>
