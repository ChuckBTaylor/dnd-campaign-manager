<!DOCTYPE html>
<html>
  <head>
    <title>DndCampaignBuilder</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>


    <br>

    <% if !logged_in? %>
      <%= link_to "Sign Up", new_user_path %> |
      <%= link_to "Login", login_path %>
    <% else %>
      Welcome, <%= link_to current_user.name, user_path(current_user) %>!
      <%= link_to "User Index", root_path %>
      <%= link_to "Spell Index", spells_path %>
      <%= link_to "Class Index", class_names_path %>
      <%= link_to "Race Index", races_path %>
      <%= link_to "Logout", '/sessions/destroy', method: "delete" %>
    <% end %>

  </nav>
  <body>
    <%= flash[:titties] if flash[:titties] %>
    <br>
    <%= yield %>
  </body>
</html>
