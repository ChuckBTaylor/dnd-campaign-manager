<div class="">
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |fm| %>
        <li><%= fm %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div>
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.label :confirm_password %>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.submit %>
  <% end %>
</div>
